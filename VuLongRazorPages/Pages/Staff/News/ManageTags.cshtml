@page
@model VuLongRazorPages.Pages.Staff.News.ManageTagsModel
@{
    ViewData["Title"] = "Manage Tags";
}

<div class="container mt-5">
    <h2>Tags</h2>

    <form method="post">
        <input type="hidden" asp-for="NewsArticle.NewsArticleId" />

        <div class="form-group">
            <div class="row">
                <div class="col-md-6">
                    @if (Model.Tags != null && Model.Tags.Any())
                    {
                        @foreach (var tag in Model.Tags)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="tag-@tag.TagId" name="SelectedTagIds"
                                       value="@tag.TagId" @(Model.SelectedTagIds != null && Model.SelectedTagIds.Contains(tag.TagId) ? "checked" : "")>
                                <label class="form-check-label" for="tag-@tag.TagId">@tag.TagName</label>
                            </div>
                        }
                    }
                    else
                    {
                        <p>No tags available.</p>
                    }
                </div>
            </div>
        </div>

        @* Error *@
        <div asp-validation-summary="All" class="text-danger"></div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>


