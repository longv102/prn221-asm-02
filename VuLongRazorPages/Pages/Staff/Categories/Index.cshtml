@page
@model VuLongRazorPages.Pages.Staff.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>News Categories</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<!-- Search Form -->
<form method="get" class="mb-4">
    <div class="form-group">
        <label>Search By:</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="SearchOption" id="searchByName" value="Name" checked>
            <label class="form-check-label" for="searchByName">Category Name</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="SearchOption" id="searchByDescription" value="Description">
            <label class="form-check-label" for="searchByDescription">Category Description</label>
        </div>
    </div>
    <div class="form-group mb-2 mt-2">
        <label for="SearchQuery">Search Query</label>
        <input type="text" class="form-control" id="SearchQuery" name="SearchQuery" value="@Model.SearchQuery">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Category Description
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Category)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryDesciption)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Action buttons">
                        <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@item.CategoryId">Edit</a>
                        <a class="btn btn-info btn-sm" asp-page="./Details" asp-route-id="@item.CategoryId" style="margin-left:5px">Details</a>
                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@item.CategoryId" style="margin-left:5px">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
