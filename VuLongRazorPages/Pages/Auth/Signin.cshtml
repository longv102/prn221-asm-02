@page
@model VuLongRazorPages.Pages.Auth.SigninModel
@{
    ViewData["Title"] = "Sign in";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm mt-5">
                <div class="card-body">
                    <h1 class="text-center">Sign in</h1>
                    <form asp-page="/Signin" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="AuthRequest.Email" class="form-label"></label>
                            <input asp-for="AuthRequest.Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="AuthRequest.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AuthRequest.Password" class="form-label"></label>
                            <input asp-for="AuthRequest.Password" class="form-control" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="AuthRequest.Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Sign in</button>

                        <div asp-validation-summary="All" class="text-danger mt-3"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


