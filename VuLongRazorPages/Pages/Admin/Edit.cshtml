@page
@model VuLongRazorPages.Pages.Admin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>System Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SystemAccount.AccountId" readonly />
            <div class="form-group mb-3">
                <label asp-for="SystemAccount.AccountName" class="control-label">Account Name</label>
                <input asp-for="SystemAccount.AccountName" class="form-control" />
                <span asp-validation-for="SystemAccount.AccountName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SystemAccount.AccountEmail" class="control-label">Account Email</label>
                <input asp-for="SystemAccount.AccountEmail" class="form-control" />
                <span asp-validation-for="SystemAccount.AccountEmail" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SystemAccount.AccountPassword" class="control-label">Password</label>
                <input asp-for="SystemAccount.AccountPassword" class="form-control" />
                <span asp-validation-for="SystemAccount.AccountPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SystemAccount.AccountRole" class="control-label">Account Role</label>
                <select asp-for="SystemAccount.AccountRole" class="form-control">
                    <option value="1">Staff</option>
                    <option value="2">Lecturer</option>
                </select>
                <span asp-validation-for="SystemAccount.AccountRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./AdminRedirect">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
