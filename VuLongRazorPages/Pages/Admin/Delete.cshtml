@page
@model VuLongRazorPages.Pages.Admin.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>System Account</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Account Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SystemAccount.AccountName)
        </dd>
        <dt class="col-sm-2">
            Account Email
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SystemAccount.AccountEmail)
        </dd>
        <dt class="col-sm-2">
            Account Role
        </dt>
        <dd class="col-sm-10">
            @Model.GetRoleName(Model.SystemAccount.AccountRole)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="SystemAccount.AccountId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./AdminRedirect">Back to List</a>
    </form>
</div>
